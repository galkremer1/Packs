<p id="notice"><%= notice %></p>

<h1>Listing Amounts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Amounts</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amounts.each do |amount| %>
      <tr>
        <td><%= amount.product %></td>
        <td><%= amount.amounts %></td>
        <td><%= amount.month %></td>
        <td><%= amount.year %></td>
        <td><%= link_to 'Show', amount %></td>
        <td><%= link_to 'Edit', edit_amount_path(amount) %></td>
        <td><%= link_to 'Destroy', amount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

